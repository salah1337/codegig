<% include partials/header %>
<% include partials/nav %>
<link rel="stylesheet" href="/css/show/All.css">
<div class="hirenow">
   <p> Want to post a job?</p> <a href="/createPost">Post Now</a>
</div>
<a id="up" href="#nav"><i class="fas fa-angle-up fa-2x"></i></a>
<div  onload="getposts()"  id="outter">
       <div id="container">
           <div id="left">
               <div id="filter">
                   <form  id="left-form">
                    <div id="project-type">
                        <h3>Project type</h3>
                         <select name="rate" id="payment">
                             <option value="" selected>unspecified</option>
                             <option value="fixed">fixed</option>
                             <option value="hourly">hourly</option>
                         </select>
                         <hr>
                    </div>
                    <div id="technologies">
                         <label for="technologies"><h3>Technologies</h2></label>
                         <div id="technologies">
                             <div class="checkbox-div"><input type="checkbox" id="css" name="css" class="checkboxes"><label for="css">css</label></div>
                             <div class="checkbox-div"><input type="checkbox" id="javascript" name="javascript" class="checkboxes"><label for="javascript">javascript</label></div>
                             <div class="checkbox-div"><input type="checkbox" id="html" name="html" class="checkboxes"><label for="html">html</label></div>
                             <div id="showmore" class="showmore hidden">
                                 <div class="checkbox-div"><input type="checkbox" id="nodejs" name="nodejs" class="checkboxes"><label for="nodejs">nodejs</label></div>
                                 <div class="checkbox-div"><input type="checkbox" id="php" name="php" class="checkboxes"><label for="php">php</label></div>
                                 <div class="checkbox-div"><input type="checkbox" id="reactjs" name="reactjs" class="checkboxes"><label for="reactjs">reactjs</label></div>
                                 <div class="checkbox-div"><input type="checkbox" id="vuejs" name="vuejs" class="checkboxes"><label for="vuejs">vuejs</label></div>
                                 <div class="checkbox-div"><input type="checkbox" id="angular" name="angular" class="checkboxes"><label for="angular">angular</label></div>
                                 <div class="checkbox-div"><input type="checkbox" id="mongodb" name="mongodb" class="checkboxes"><label for="mongodb">mongodb</label></div>
                                 <div class="checkbox-div"><input type="checkbox" id="mysql" name="mysql" class="checkboxes"><label for="mysql">mysql</label></div>
                                 <div class="checkbox-div"><input type="checkbox" id="ruby" name="ruby" class="checkboxes"><label for="ruby">ruby</label></div>
                                 <div class="checkbox-div"><input type="checkbox" id="rubyonrails" name="rubyonrails" class="checkboxes"><label for="rubyonrails">rubyonrails</label></div>
                             </div>
                         </div>
                         <div id="showmore-btn" onclick="showmore()">show more</div>
                         <hr>
                    </div>
                    
                    <div id="city">
                         <label for="city"><h3>City</h3></label>
                         <select default="chose a city..."  id="location">
                             <option value=""  selected>unspecified</option>
                             <option value="casablanca">casablanca</option>
                             <option value="rabat">rabat</option>
                             <option value="mohemadia">mohemadia</option>
                         </select>
                         <hr>
                    </div>
                    <div id="price">
                         <label for="price"><h3>price</h3></label>
                         <select default="chose a price..."  id="ammount">
                             <option value=""  selected>unspecified</option>
                             <option value="0-100">0-100</option>
                             <option value="100-500">100-500</option>
                             <option value="500-1500">500-1500</option>
                         </select>
                         <select default="chose a price..."  id="currency">
                             <option value=""  selected>unspecified</option>
                             <option value="EUR">EUR</option>
                             <option  value="DH">DH</option>
                             <option value="USD">USD</option>
                         </select>
                         <hr>
                    </div>
                    <div id="reset">
                        <div onclick="applyFilters()" id="applyFilters">
                                <p>Apply filters</p>
                            </div>
                            <p onclick="getposts()">Restore default</p>
                    </div>
                    
                   </form>
               </div>
           </div>
           <div id="right">
              
               
               <div id="search">
                   <div id="search-bar">
                        <form id="search-form"><input id="search-input" type="text"><span onclick="getposts()"><i class=" icons fas fa-sync-alt"></i></span></form>
                        
                        
                   </div>
                    <div onclick="toggleSettings()" id="search-settings">
                            <i class="icons fas fa-bars"></i>
                   </div>
                   
                  
               </div>
               <hr>
               <div id="results">
                  
                    <% posts.forEach(function(post){ %>
                     <div id="res">
                        <div class="post">
                           <div><h3 id="tit"><%= post.title %></h3>
                           <h5><%= post.description.slice(0,40) %>...</h5>
                           <div id="btm-pst">
                           <h6><% const date =  post.date.toString()%></h6>
                           <h6><%=date.slice(0,15) %></h6>
                           <h6><%= post.technologies%></h6></div>
                           <div id="p"><p><%= post.ammount %> <%= post.currency %></p>
                            <div id="see-more"><a href="/api/posts/<%= post._id %>">more</a></div></div>  
                             
                           </div>
                        
                       </div>
                    </div>
                  <% }); %>

               </div>
              
           </div>
       </div>
      </div>
<!-- <script src="/javascript/p5.js"></script> -->
<!-- <script src="/javascript/sketch.js"></script> -->
<script  src="/javascript/showall.js"></script>
<% include partials/footer %>